<idea-plugin>
    <id>com.github.sey2.intlautosort</id>
    <name>intl-auto-sort</name>
    <vendor email="casio2978@naver.com" url="https://github.com/sey2">sey2</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <actions>
        <action id="com.github.sey2.intlautosort.actions.SortIntlAction" class="com.github.sey2.intlautosort.actions.SortIntlAction" text="Sort intl Files" description="Sorts Flutter intl files by key">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt S"/>
        </action>
    </actions>
</idea-plugin>
